{
  "name": "@foundriesio/jobserv-api",
  "version": "1.9.0",
  "private": false,
  "description": "JobServ API for nodejs",
  "engines": {
    "node": ">= 12"
  },
  "main": "dist/main.js",
  "files": [
    "dist/*.js",
    "LICENSE.md",
    "package-lock.json",
    "src"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "prepare": "npm run build",
    "build": "NODE_ENV=production webpack --progress",
    "build:test": "NODE_ENV=test webpack --display none",
    "lint": "prettier *.md *.js ./src/*.js ./src/**/*.js  --write",
    "pretest": "npm run build:test",
    "test": "NODE_ENV=test mocha --check-leaks --inline-diffs --allow-uncaught --exit ./src/test"
  },
  "lint-staged": {
    "src/**/*.+(js|md|yaml)": [
      "eslint --config src/.eslintrc.json --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "Milo Casagrande <milo@foundries.io>",
  "license": "Apache-2.0",
  "devDependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.11.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "mocha": "^8.2.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "webpack": "^4.44.2",
    "webpack-cli": "^4.1.0"
  },
  "dependencies": {
    "@foundriesio/log": "^1.0.18",
    "@foundriesio/request": "^1.0.7",
    "bluebird": "^3.7.2",
    "convict": "^6.0.0",
    "convict-format-with-moment": "^6.0.0",
    "convict-format-with-validator": "^6.0.0",
    "json5": "^2.1.3",
    "jsonwebtoken": "^8.5.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/foundriesio/fio-jobserv-api.git"
  },
  "bugs": {
    "url": "https://github.com/foundriesio/fio-jobserv-api/issues"
  },
  "homepage": "https://github.com/foundriesio/fio-jobserv-api#readme"
}
